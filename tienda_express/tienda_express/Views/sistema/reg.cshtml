@model tienda_express.Models.usuario

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse al sitio web</title>

    <script type="text/javascript" src="/scripts/jquery.min.js"></script>
    <script src="http://ajax.microsoft.com/ajax/jquery/jquery-1.4.2.js" type="text/javascript"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">



</head>
<body>
    <center><h3>Registrarse al sitio web</h3></center>

    @using (Html.BeginForm("nusc", "sistema", FormMethod.Post))
    {
    <table border="1" align="center" class="border border-dark">
    <tr>
    <td><label>Rut : </label></td>
    <td>@Html.TextBoxFor(x=>x.rut)</td>
    </tr>
    <tr>
    <td><label>Nombre : </label></td>
    <td>@Html.TextBoxFor(x=>x.nombre)</td>
    </tr>
    <tr>
    <td><label>Apellido : </label></td>
    <td>@Html.TextBoxFor(x=>x.apellido)</td>
    </tr>
    <tr>
    <td><label>Direccion : </label></td>
    <td>@Html.TextAreaFor(x=>x.direccion)</td>
    </tr>
    <tr>
    <td><label>Clave : </label></td>
    <td>@Html.PasswordFor(x=>x.clave)</td>
    </tr>
    <tr>
    <td colspan="2" align="center">
        <button type="submit" name="Registrarse" value="Registrarse" id="Registrarse" class="btn btn-success">Registrarse</button>
        &nbsp;
        <button type="reset" name="Cancelar" value="Cancelar" id="Cancelar" class="btn btn-danger">Cancelar</button>
    </td>
    </tr>
    </table>

    }
</body>
</html>
<script>
    $(document).ready(function () {
        $("#Registrarse").click(function () {


            var ru = $("#rut").val();
            var nu = $("#nombre").val();
            var au = $("#apellido").val();
            var du = $("#direccion").val();
            var cu = $("#clave").val();

            if (ru == null || ru == "" || nu == null || nu == "" || au == null || au == "" || du == null || du == "" || cu == null || cu == "")
            {
                alert("Debe completar los campos");
            } else {

                alert("Campos completos");
            }




        });

    });
</script>